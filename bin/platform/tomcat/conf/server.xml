		<!-- If you want to use a mail JNDI resource please set mail.fromJNDI property and uncomment following block.
		     Furthermore you have to copy the mail library from ext/core/lib to tomcat/lib -->
		<!-- <Resource 	name="mail/Session" auth="Container"
		        		type="javax.mail.Session"
		        		mail.transport.protocol="smtp"
		        		mail.smtp.host="${mail.smtp.server}"
		        		mail.smtp.from="test@hybris.de"
		        		description="Global E-Mail Resource"
		    		/>-->

  </GlobalNamingResources>


  <Service name="Catalina" >

	<Executor     name="hybrisExecutor"
			        namePrefix="hybrisHTTP"
			        maxThreads="200"
			        minSpareThreads="40"
			        maxIdleTime="10000"/>

    <Connector port="9001"
			   maxHttpHeaderSize="8192"
			   maxPostSize="4194304"
               maxThreads="200"
               protocol="org.apache.coyote.http11.Http11Protocol"
               executor="hybrisExecutor"
               enableLookups="false"
               acceptCount="100"
               connectionTimeout="20000"
               URIEncoding="UTF-8"
               disableUploadTimeout="true" />

    <Connector port="9002"
			   maxHttpHeaderSize="8192"
			   maxPostSize="4194304"
               maxThreads="150"
               protocol="org.apache.coyote.http11.Http11Protocol"
               executor="hybrisExecutor"
               enableLookups="false"
               acceptCount="100"
               connectionTimeout="20000"
               disableUploadTimeout="true"
               URIEncoding="UTF-8"
               SSLEnabled="true"
					scheme="https"
					secure="true"
					clientAuth="false"
   				sslProtocol = "TLS"
   				keystoreFile="${catalina.home}/lib/keystore"
   				keystorePass="123456"
                />

    <!--
    This might evaluate into 
    <Connector protocol="AJP/1.3" port="8009" proxyPort="${proxy.http.port}" redirectPort="${proxy.ssl.port}" useIPVHosts="${tomcat.ajp.useipv}" />  
    where the tomcat.ajp.port is mandatory property to render this connector. 
     --> 
		<Connector  protocol="AJP/1.3"  URIEncoding="UTF-8"  port="8009" />
	

    <Engine name="Catalina" defaultHost="localhost">

			<Valve 	className="org.apache.catalina.valves.AccessLogValve"
             		directory="/work/TourHy/hybris/log/tomcat"
	      		 	prefix="access."
        	   		suffix=".log"
	      		 	pattern="combined"
          />

      <Host 	name="localhost"
      			appBase="webapps"
		       	unpackWARs="false"
		       	autoDeploy="false">


			<!-- 'testweb' extension's context for tenant 'junit' -->
			<Context path="/test" docBase="/work/TourHy/hybris/bin/platform/ext/testweb/web/webroot" >
				<Manager pathname="" />
				<Loader platformHome="/work/TourHy/hybris/bin/platform" className="de.hybris.tomcat.HybrisWebappLoader" deployName="default" />
			</Context>

			<!-- 'processing' extension's context for tenant 'master' -->
			<Context path="/processing" docBase="/work/TourHy/hybris/bin/platform/ext/processing/web/webroot" >
				<Manager pathname="" />
				<Loader platformHome="/work/TourHy/hybris/bin/platform" className="de.hybris.tomcat.HybrisWebappLoader" deployName="default" />
			</Context>

			<!-- 'maintenanceweb' extension's context for tenant 'master' -->
			<Context path="/maintenance" docBase="/work/TourHy/hybris/bin/platform/ext/maintenanceweb/web/webroot" >
				<Manager pathname="" />
				<Loader platformHome="/work/TourHy/hybris/bin/platform" className="de.hybris.tomcat.HybrisWebappLoader" deployName="default" />
			</Context>

			<!-- 'mediaweb' extension's context for tenant 'master' -->
			<Context path="/medias" docBase="/work/TourHy/hybris/bin/platform/ext/mediaweb/web/webroot" >
				<Manager pathname="" />
				<Loader platformHome="/work/TourHy/hybris/bin/platform" className="de.hybris.tomcat.HybrisWebappLoader" deployName="default" />
			</Context>

			<!-- 'oauth2' extension's context for tenant 'master' -->
			<Context path="/authorizationserver" docBase="/work/TourHy/hybris/bin/platform/ext/oauth2/web/webroot" >
				<Manager pathname="" />
				<Loader platformHome="/work/TourHy/hybris/bin/platform" className="de.hybris.tomcat.HybrisWebappLoader" deployName="default" />
			</Context>

			<!-- 'oauth2' extension's context for tenant 'junit' -->
			<Context path="/authorizationserver_junit" docBase="/work/TourHy/hybris/bin/platform/ext/oauth2/web/webroot" >
				<Manager pathname="" />
				<Loader platformHome="/work/TourHy/hybris/bin/platform" className="de.hybris.tomcat.HybrisWebappLoader" deployName="default" />
			</Context>

			<!-- 'hac' extension's context for tenant 'master' -->
			<Context path="" docBase="/work/TourHy/hybris/bin/platform/ext/hac/web/webroot" >
				<Manager pathname="" />
				<Loader platformHome="/work/TourHy/hybris/bin/platform" className="de.hybris.tomcat.HybrisWebappLoader" deployName="default" />
			</Context>

			<!-- 'hac' extension's context for tenant 'junit' -->
			<Context path="/hac_junit" docBase="/work/TourHy/hybris/bin/platform/ext/hac/web/webroot" >
				<Manager pathname="" />
				<Loader platformHome="/work/TourHy/hybris/bin/platform" className="de.hybris.tomcat.HybrisWebappLoader" deployName="default" />
			</Context>

			<!-- 'concerttours' extension's context for tenant 'master' -->
			<Context path="/concerttours" docBase="/work/TourHy/hybris/bin/custom/concerttours/web/webroot" >
				<Manager pathname="" />
				<Loader platformHome="/work/TourHy/hybris/bin/platform" className="de.hybris.tomcat.HybrisWebappLoader" deployName="default" />
			</Context>


      </Host>

    </Engine>

  </Service>

</Server>
